{
  "name": "task-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "bin": {
    "kai-runner": "./dist/main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf dist",
    "ci": "npm run lint && npm test",
    "test": "jest -i",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "eslint --fix .",
    "pre-build": "./scripts/collect-build-deps.sh && npm install",
    "pre-run": "./scripts/collect-runtime-deps.sh",
    "prebuild": "npm run clean && npm run pre-build",
    "build": "tsup src/index.ts src/main.ts --dts --format esm,cjs --out-dir dist --clean",
    "dev": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --watch"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts}": "eslint --fix",
    "*.json": "prettier --write"
  },
  "dependencies": {
    "@editor-extensions/agentic": "file:./vendor/editor-extensions-agentic-0.4.0.tgz",
    "@editor-extensions/shared": "file:./vendor/editor-extensions-shared-0.4.0.tgz",
    "@langchain/aws": "^0.1.0",
    "@langchain/core": "^0.3.0",
    "@langchain/deepseek": "^0.1.0",
    "@langchain/google-genai": "^0.1.0",
    "@langchain/langgraph": "^0.3.0",
    "@langchain/ollama": "^0.1.0",
    "@langchain/openai": "^0.3.0",
    "chokidar": "^3.5.3",
    "commander": "^12.0.0",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "tinyglobby": "^0.2.15",
    "vscode-jsonrpc": "^8.2.0",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.18.12",
    "eslint": "^9.14.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "tsup": "^8.4.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  }
}
