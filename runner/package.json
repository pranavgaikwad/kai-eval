{
  "name": "task-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf dist",
    "ci": "npx jest",
    "test": "jest",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "eslint --fix .",
    "build-deps": "./scripts/build-deps.sh",
    "prebuild": "npm run clean",
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --clean",
    "dev": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --watch"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts}": "eslint --fix",
    "*.json": "prettier --write"
  },
  "dependencies": {
    "@editor-extensions/agentic": "file:./vendor/editor-extensions-agentic-0.2.0.tgz",
    "chokidar": "^3.5.3",
    "globby": "^15.0.0",
    "vscode-jsonrpc": "^8.2.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.12",
    "eslint": "^9.14.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "tsup": "^8.4.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  }
}
